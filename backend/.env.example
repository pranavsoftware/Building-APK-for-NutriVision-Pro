# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/nutriVisionDB?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-super-secure-random-jwt-secret-key-change-this-in-production
JWT_EXPIRE=7d

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here

# Email Configuration (Nodemailer - Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-specific-password
EMAIL_FROM=NutriVision Pro <noreply@nutrivision.com>

# OTP Configuration
OTP_EXPIRY=10
OTP_LENGTH=6

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp
